### Simple ###
##############
alias gp="git push"
alias gpo="git pull origin \$(git branch --show-current)"
alias gs="git status"
alias gc="git commit -m"
alias ga="git add"
alias gac="git commit -am"
alias gd="git diff"

#################
### Functions ###
#################

function _gcp(){
	gc "$@" && gp
}
alias gcp="_gcp"
alias gacp="ga && gcp"

